scrape_configs:
  - job_name: prometheus-server
    scrape_interval: 60s
    static_configs:
    - targets:
      - localhost:9090
  - job_name: node-exporter
    scrape_interval: 60s
    static_configs:
{% for item in docker_hosts %}
    - targets:
      - {{ item }}:9100
      labels:
        host: {{ item.split('.')[0] }}
{% endfor %}
  - job_name: containers
    scrape_interval: 60s
    static_configs:
{% for item in docker_hosts %}
    - targets:
      - {{ item }}:8080
      labels:
        host: {{ item.split('.')[0] }}
{% endfor %}
